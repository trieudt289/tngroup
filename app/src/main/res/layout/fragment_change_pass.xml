<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp"
    android:orientation="vertical"
    tools:context=".fragment.ChangePassFragment">
    <ImageButton
        android:id="@+id/btnBack2"
        android:layout_width="wrap_content"
        android:src="@drawable/backtwo"
        android:background="#00000000"
        android:layout_height="wrap_content"/>
    <!-- TODO: Update blank fragment layout -->
   <ImageView
       android:src="@drawable/tnlogo"
       android:layout_width="wrap_content"
       android:layout_height="220dp"/>


    <TextView
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:text="Enter your new password"
        android:textSize="16sp"
        android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/edtpassnew1"
        android:hint="Enter your new password here "
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:text="Re-enter new password"
        android:textSize="16sp"
        android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/edtpassnew2"
        android:hint="Re-enter new password here "
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/btnChangpass"
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:backgroundTint="#394BAE"
        android:text="  Change Pass  "
        android:textSize="18sp"
        android:layout_height="wrap_content"/>



</LinearLayout>