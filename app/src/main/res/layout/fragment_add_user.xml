<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".fragment.AddUserFragment">

    <ImageView
        android:src="@drawable/tnlogo"
        android:layout_width="wrap_content"
        android:layout_height="220dp"/>
    <TextView
        android:layout_marginTop="1dp"
        android:layout_width="wrap_content"
        android:text="Full Name"
        android:textSize="18sp"
        android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/edtName"
        android:layout_width="match_parent"
        android:hint="Enter the employee's full name"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_marginTop="1dp"
        android:layout_width="wrap_content"
        android:text="Gmail"
        android:textSize="18sp"
        android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/edtGmail"
        android:layout_width="match_parent"
        android:hint="Enter the employee's gmail"
        android:layout_height="wrap_content"/>
    <RadioGroup
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:text="Male"
            android:layout_height="wrap_content"/>
        <RadioButton
            android:id="@+id/radiomale"
            android:buttonTint="@color/color_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="wrap_content"
            android:text="Female"
            android:layout_height="wrap_content"/>
        <RadioButton
            android:id="@+id/radiofemale"
            android:buttonTint="@color/color_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RadioGroup>
    <Button
        android:id="@+id/btnAddstaff"
        android:layout_marginTop="15dp"
        android:layout_gravity="center"
        android:text="Add Staff"
        android:backgroundTint="#394BAE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</LinearLayout>